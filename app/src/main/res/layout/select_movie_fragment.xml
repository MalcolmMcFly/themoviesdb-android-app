<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
                name="viewModel"
                type="org.js.denisvieira.themoviedbapp.application.modules.selectmovie.SelectMovieViewModel" />

    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/strongGray"
            android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/selectMovieappBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp">

            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/selectMovieToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:theme="@style/ToolbarColoredBackArrow">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.ContentLoadingProgressBar
                android:id="@+id/progressBar"
                android:theme="@style/WhiteProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:indeterminate="true" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selectMovieMainRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                tools:itemCount="10"
                tools:listitem="@layout/movie_item_view_holder" />

    </LinearLayout>

</layout>
